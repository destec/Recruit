<form id="pagerForm" method="post" action="demo_page1.html">
	<input type="hidden" name="status" value="${param.status}">
	<input type="hidden" name="keywords" value="${param.keywords}" />
	<input type="hidden" name="pageNum" value="1" />
	<input type="hidden" name="numPerPage" value="${model.numPerPage}" />
	<input type="hidden" name="orderField" value="${param.orderField}" />
</form>


<div class="pageHeader">
	<form onsubmit="return navTabSearch(this);" action="demo_page1.html" method="post">
	<div class="searchBar">
		<table class="searchContent">
			<tr>
				<td>
					学校名称：<input type="text" name="keyword" />
					招生负责人：<input type="text" name="keyword" />
			</tr>
		</table>
		<div class="subBar">
			<ul>
				<li><div class="buttonActive"><div class="buttonContent"><button type="submit">检索</button></div></div></li>
			</ul>
		</div>
	</div>
	</form>
</div>
<div class="pageContent">
	<div class="panelBar">
		<ul class="toolBar">
			<li><a class="add" href="school_add" target="dialog" mask="true"><span>添加</span></a></li>
			<li><a class="delete" href="user_del?uid={sid_school}" target="ajaxTodo" title="确定要删除吗?"><span>删除</span></a></li>
			<li><a class="edit" href="school_modify?uid={sid_school}" target="dialog" mask="true"><span>修改</span></a></li>
			<li class="line">line</li>
		</ul>
	</div>
	<table class="table" width="100%" layoutH="115">
		<thead>
			<tr>
				<th width="200">编号</th>
				<th>学校名称</th>
        <th width="400">招生负责人</th>
			</tr>
		</thead>
		<tbody>
      <% for(var i=0; i<schools.length; i++) { %>
				<tr target="sid_school" rel="<%= schools[i].id %>">
					<td><%= i + 1 %></td>
					<td><%= schools[i].name %></td>
					<td><%= schools[i].person %></td>
				</tr>
      <% } %>
		</tbody>
	</table>
	</div>
</div>
